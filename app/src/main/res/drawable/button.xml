<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorw" />
            <gradient android:angle="-90" android:startColor="#d9954a" android:endColor="#c06315"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d9954a" />
            <solid android:color="@color/colorw"/>

        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorw" />
            <gradient android:angle="-90" android:startColor="#d9954a" android:endColor="#c06315" />
        </shape>
    </item>

</selector>