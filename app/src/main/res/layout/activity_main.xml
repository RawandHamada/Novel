<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backend"
    tools:context="com.example.dodo.novel.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="390dp"
        android:layout_height="100dp"
        android:elevation="6dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:layout_editor_absoluteX="-3dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-5dp"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorw">
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/search"
        tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="310dp" />


        />
    <TextView
        android:id="@+id/textL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_toolbar"
        android:layout_gravity="center"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="40dp"
        tools:layout_editor_absoluteX="81dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="261dp"
        android:layout_height="86dp"
        android:src="@drawable/center"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="120dp" />
    <TextView
        android:id="@+id/textLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_gravity="center"
        android:singleLine="true"
        android:text="لا تخف من الفشل عليك فقط بالمحاوله"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="223dp"
        tools:layout_editor_absoluteX="95dp" />


    <Button
        android:id="@+id/button"
        android:layout_width="142dp"
        android:layout_height="89dp"
        android:text="روايات عربيه"
        android:background="@drawable/arabic"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="268dp" />
    />

    <Button
        android:id="@+id/button2"
        android:layout_width="142dp"
        android:layout_height="89dp"
        android:text="روايات تاريخيه"
        android:background="@drawable/history"
        tools:layout_editor_absoluteX="229dp"
        tools:layout_editor_absoluteY="268dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="142dp"
        android:layout_height="89dp"
        android:text="روايات رومانسيه"
        android:background="@drawable/romnsiy"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="400dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="142dp"
        android:layout_height="89dp"
        android:text="روايات مترجمه"
        android:background="@drawable/mtagam"
        tools:layout_editor_absoluteX="229dp"
        tools:layout_editor_absoluteY="400dp" />

</android.support.constraint.ConstraintLayout>
